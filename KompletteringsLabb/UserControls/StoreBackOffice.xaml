<UserControl
    x:Class="KompletteringsLabb.UserControls.StoreBackOffice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KompletteringsLabb.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="Display" Background="Green">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--
                <ListView
                x:Name="AddProducts"
                Grid.Row="1"
                Grid.RowSpan="5"
                Grid.Column="1"
                Grid.ColumnSpan="3"
            -->
            <!--<ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Product}"/>
                            <TextBlock Text="Price"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate> Denna hade varit nice för att få alla produkter och priser på ett ställe-->
            <!--  ListView>  -->
            <DataGrid
                x:Name="ProductsToAdd"
                Grid.Row="2"
                Grid.RowSpan="8"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Width="Auto"
                Height="Auto"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ProductName" />
                    <DataGridTextColumn Header="Price" />
                </DataGrid.Columns>
            </DataGrid>
            <Button
                x:Name="Addbtn"
                Grid.Row="10"
                Grid.Column="3"
                Content="Add Product" />
            <DataGrid
                x:Name="ProductsInStore"
                Grid.Row="2"
                Grid.RowSpan="8"
                Grid.Column="6"
                Grid.ColumnSpan="4"
                Width="Auto"
                Height="Auto"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ProductName" />
                    <DataGridTextColumn Header="Price" />
                    <DataGridTextColumn Header="Amount" />
                    <DataGridTextColumn Header="TotalValue" />
                </DataGrid.Columns>
            </DataGrid>
            <Button
                x:Name="savebtn"
                Grid.Row="10"
                Grid.Column="9"
                Content="Save" />
            <Button
                x:Name="backbtn"
                Grid.Row="0"
                Grid.Column="0"
                Content="Back" Click="backbtn_Click" />
        </Grid>
    </Grid>
</UserControl>
